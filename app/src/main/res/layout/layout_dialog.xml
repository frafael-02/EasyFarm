<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        app:cardCornerRadius="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            >


            <TextView
                android:id="@+id/edit_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vaš email"
                android:textSize="24sp"
                android:backgroundTint="@color/iconYellow"
                android:textColor="@color/greyText"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />
            <TextView
                android:id="@+id/emailtextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="EMAIL"
                android:textSize="16sp"
                android:textColor="@color/iconGrey"
                app:layout_constraintTop_toBottomOf="@id/edit_username"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <EditText
                android:id="@+id/edit_ime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:backgroundTint="@color/iconYellow"
                android:textColor="@color/greyText"
                android:textAlignment="center"
                android:hint="Vaše ime i prezime"
                android:inputType="text"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/emailtextView"
                />
            <TextView
                android:id="@+id/imeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="IME I PREZIME"
                android:textSize="16sp"
                android:textColor="@color/iconGrey"
                app:layout_constraintTop_toBottomOf="@id/edit_ime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />




            <EditText
                android:id="@+id/edit_mibpg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vaš MIBPG"
                android:inputType="number"
                android:textSize="24sp"
                android:backgroundTint="@color/iconYellow"
                android:textAlignment="center"
                android:textColor="@color/greyText"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/imeTextView"
                />
            <TextView
                android:id="@+id/mipgtextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:text="MIBPG"
                android:textSize="16sp"
                android:textColor="@color/iconGrey"
                app:layout_constraintTop_toBottomOf="@id/edit_mibpg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />




        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>



