<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/evidencijaFragmentId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EvidencijaFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottomGuidline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient_shape_back"
            android:elevation="20dp"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/bottomGuidline">
<TextView
    android:id="@+id/time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:text="TIME"
    android:textStyle="bold"
    android:textColor="@color/white"
    android:textSize="30dp"
    />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentBottom="true"
    android:background="@drawable/gradient_shape_back"
    android:backgroundTint="#66FFFFFF"
    android:padding="5dp"
    android:layout_toLeftOf="@id/time"
    >
    <TextView
        android:id="@+id/prskanjeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRSKANJE"
        android:textStyle="bold"
        android:textColor="@color/greyText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/ukupno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UKUPNO"
        android:textStyle="bold"
        android:textColor="@color/iconGrey"
        android:layout_below="@id/prskanjeTextView"
        android:layout_alignParentLeft="true"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/ovajMjesec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OVAJ\nMJESEC"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/iconGrey"
        android:layout_below="@id/prskanjeTextView"
        android:layout_alignParentRight="true"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/ovajMjesecIspod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ha"
        android:textStyle="bold"
        android:textColor="@color/greyText"
        android:layout_below="@id/ovajMjesec"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/ukupnoIspod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ha"
        android:textStyle="bold"
        android:textColor="@color/greyText"
        android:layout_below="@id/ukupno"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/danas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DANAS"
        android:textStyle="bold"
        android:textColor="@color/iconGrey"
        android:layout_below="@id/ukupnoIspod"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/danasIspod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ha"
        android:textStyle="bold"
        android:textColor="@color/greyText"
        android:layout_below="@id/danas"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        />
</RelativeLayout>

        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/evidencijaListId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/relativeLayout2" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addEvidencijaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="30dp"
            android:backgroundTint="@color/transparent"
            android:clickable="true"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="@color/iconYellow"
            app:borderWidth="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />



        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Filter"
            android:drawableLeft="@drawable/filter"
            android:background="@drawable/main_square"
            android:textSize="20sp"
            android:textColor="@color/greyText"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/sort"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Sortiraj"
            android:drawableLeft="@drawable/sort"
            android:background="@drawable/main_square"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@color/greyText"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/filter"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />
        />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/izvoz"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/filter">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dodajZemlju"
                android:drawableLeft="@drawable/soil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/main_square"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="@color/greyText"
                android:textStyle="bold"
                android:text="  DODAJ\n  ZEMLJU" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pesticid"
                android:layout_below="@id/dodajZemlju"
                android:background="@drawable/main_square"
                android:layout_marginTop="10dp"
                android:textColor="@color/greyText"
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="20sp"
                android:text=" DODAJ\n  PESTICID" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/izvoz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  IZVOZ"
            android:background="@drawable/main_square"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/greyText"
            android:textStyle="bold"
            android:drawableLeft="@drawable/export"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/relativeLayout2"
            app:layout_constraintTop_toBottomOf="@+id/sort" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>