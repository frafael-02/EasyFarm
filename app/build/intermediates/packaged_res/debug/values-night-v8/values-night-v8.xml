<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TestApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/greenDark</item>
        <item name="colorPrimaryVariant">@color/greenLight</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/iconYellow</item>
        <item name="colorSecondaryVariant">@color/iconGrey</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <item name="android:windowContentTransitions">true</item>

    </style>
    <style name="Theme.TestApp.Fragmenti" parent="Widget.MaterialComponents.ActionBar.PrimarySurface">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorPrimary">@color/greenDark</item>
        <item name="android:fontFamily">@font/poppinsbold</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="ThemeOverlay.SearchView" parent="">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">#DADADA</item>
        <item name="android:backgroundTint">#80000000</item>
    </style>
</resources>